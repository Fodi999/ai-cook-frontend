# Environment variables for IT Cook Frontend

# API Configuration Options:

# Option 1: Automatic selection (recommended)
# Оставьте пустым для автоматического выбора между локальным и продакшен API
# NEXT_PUBLIC_API_URL=

# Option 2: Local Go Backend (development)
# NEXT_PUBLIC_LOCAL_BACKEND=local_go
# NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Option 3: Local Rust Backend (legacy)
# NEXT_PUBLIC_LOCAL_BACKEND=local_rust
# NEXT_PUBLIC_API_URL=http://localhost:3002/api/v1

# Option 4: Force Production (Koyeb)
# NEXT_PUBLIC_USE_PRODUCTION=true
# NEXT_PUBLIC_API_URL=https://itcook-backend-go-fodi999-8b0a955d.koyeb.app/api/v1

# Tolgee Internationalization (localization)
NEXT_PUBLIC_TOLGEE_API_KEY=your-tolgee-api-key-here
NEXT_PUBLIC_TOLGEE_API_URL=https://app.tolgee.io

# Development Environment
NODE_ENV=development

# App Version
NEXT_PUBLIC_APP_VERSION=1.0.0
